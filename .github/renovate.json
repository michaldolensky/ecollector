{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":automergeTypes",
    ":automergeMinor",
    ":label(dependencies)",
    ":rebaseStalePrs",
    ":prHourlyLimitNone",
    ":docker"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "eslint"
      ],
      "labels": [
        "linting"
      ]
    },
    {
      "matchDepTypes": [
        "optionalDependencies"
      ],
      "addLabels": [
        "optional"
      ]
    }
  ],
  "docker": {
    "major": {
      "enabled": false
    },
    "minor": {
      "enabled": true
    }
  }
}
